    <script>
   
        $(document).ready(function() {
           if ($('#txtRecordCount').val() > 0) {
                $('#datatable-responsive').DataTable();
           }

            $('.startDatePicker').datepicker({
                endDate: '+0d',
                calendarWeeks: false,
                todayHighlight: true,
                clearBtn: true,
                autoclose: true
            });

            $('.endDatePicker').datepicker({
                startDate: '-0d',
                calendarWeeks: false,
                todayHighlight: true,
                clearBtn: true,
                autoclose: true
            });

            var selectedOperatorId = @ViewBag.SelectedOperatorId;
