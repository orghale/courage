
@model  LottoGistAdmin.DataAccess.RemoteModel.GameTypeItemObj
@{
    Layout = null;
    var error = ViewBag.Error as string;
    var hasError = !string.IsNullOrEmpty(error);
}

<div class="modal-dialog">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2><b>NEW GAME TYPE</b> </h2>
        </div>
        
        <div class="panel-body">
            @if (hasError)
            {
                <div class="bs-callout bs-callout-danger" id="customError">
                    <h4>Error!</h4>
                    <p>@Html.Raw(error)</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            }
            else
            {
                using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmAddGameType", data_parsley_validate = "" }))
                {
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div id="dvError"></div>
                    <div class="form-group">
                        <b>GAME TYPE</b>
                        <input type="text" class="form-control " value="@Model.Name" id="txtName" name="txtName" required="" data-parsley-required-message="Game Type Name is required">
                    </div>
                    <div class="form-group">
                        <b>SHORT NAME</b>
                        <input type="text" class="form-control " value="@Model.ShortName" id="Name" name="Name" required="" data-parsley-required-message="Game Type Short-Name is required">
                    </div>
                    <div class="form-group">
                        <b>STATUS</b>
                        <input type="checkbox" @(Model.StatusVal ? "checked=\"checked\"" : "") id="chkStatus">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal"> <i class="fa fa-remove"></i> Close</button>
                        <button type="submit" class="btn btn-success" id="btnUpdate"> <i class="fa fa-check"></i> Add</button>
                    </div>
                </div>
                }
            }

        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        $('#frmAddGameType').parsley().on('field:validated', function() {
            var ok = $('.parsley-error').length === 0;
            $('.bs-callout-info').toggleClass('hidden', !ok);
            $('.bs-callout-danger').toggleClass('hidden', ok);
        }).on('form:submit', function () {
            ClearInlineError("dvError");


            var roleName = $("#txtName").val();
            var shortName = $("#Name").val();
            var chkStatus = $("#chkStatus").is(':checked');//(':checked')


            if (roleName == null || roleName === "" || roleName.length < 2) {
                InlineErrorMessage("Game Name must be at least 2 characters", "dvError");
                return false;
            }
            if (shortName == null || shortName === "" || shortName.length < 2) {
                InlineErrorMessage("Game Short Name must be 2 and 15 characters", "dvError");
                return false;
            }
           
            $.ajax({
                type: "POST",
                url: '@Url.Action("ProcessAddRequest", "GameType")',
                data: JSON.stringify({ myName: roleName, myShortName: shortName, myStatus: chkStatus }),
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (!data.IsAuthenticated) {
                        window.location.href = "/Login";
                        return;
                    }
                    if (!data.IsSuccessful) {
                        InlineErrorMessage(data.Error ? data.Error : "Unknow error occured. Please try again later!", "dvError");
                       swal({
                            title: "",
                            text: data.Error ? data.Error : "Unknow error occured. Please try again later!",
                            type: "error",
                            showCancelButton: false,
                            confirmButtonText: "Close",
                            closeOnConfirm: true,
                        }, function (isConfirm) {
                            if (isConfirm) {

                            }
                        });

                    } else {
                        $('#dvModal').modal('hide');
                        swal({
                            title: "",
                            text: "Game type was added successfully",
                            type: "success",
                            showCancelButton: false,
                            confirmButtonText: "Ok",
                            closeOnConfirm: false,
                        }, function (isConfirm) {
                            if (isConfirm) {
                               window.location.reload();
                            }
                        });
                    }
                },
                complete: function () {
                    $(".loader").hide();
                    $("#loadingMessage").html("");
                }
            });
            return false;
        });



    });


</script>







